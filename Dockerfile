FROM alpine

ADD build/vasco /

ENV VASCO_PROXY 8080
ENV VASCO_REGISTRY 8081
ENV VASCO_STATUS 8082
ENV MINPORT 8100
ENV MAXPORT 9900
ENV STATIC_PATH ""
ENV EXPECTED_SERVICES ""
ENV REDIS_ADDR "localhost:6379"
ENV DISCOVERY_EXPIRATION 3600
ENV STATUS_TIME 60

EXPOSE 8080 8081 8082

ENTRYPOINT ["/vasco"]
